<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/light_gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ff14335a">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/logo2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_weight="5"
            android:gravity="left"
            android:text="加载数据"
            android:textColor="#ffeeeeee"
            android:textSize="28sp"
            android:typeface="sans" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="城市："
            android:textColor="#869299"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/city"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#3c3f41"
            android:gravity="center"
            android:text=""
            android:textColor="#ff005874"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="地图："
            android:textColor="#869299"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/map"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="#ff005874"
            android:background="#3c3f41"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <AutoCompleteTextView
                android:id="@+id/auto1"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:background="#3c3f41"
                android:text=""
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:text="起始ID:"
                android:textColor="#869299" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <AutoCompleteTextView
                android:id="@+id/auto2"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#3c3f41"
                android:text=""
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="目的地:"
                android:textColor="#869299" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_above="@+id/linear"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:background="#142a39"
        android:textColor="#869299"
        android:text=" 开始导航 " />

    <TextView
        android:id="@+id/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:text="向右滑设置城市及地图"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:background="#fdfdfe"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ff14335a"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="推荐  ▼"
                android:textColor="#869299"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/food" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/book" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/cloth" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/movie" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ktv" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shop" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/home" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/haircut" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/hand" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>